{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build: current cpp",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p \"${workspaceFolder}/bin\" && clang++ -std=c++20 -O2 -Wall -Wextra -Wshadow -Wconversion -g -fdebug-compilation-dir=\"${workspaceFolder}/bin\" \"${file}\" -o \"${workspaceFolder}/bin/${fileDirnameBasename}_${fileBasenameNoExtension}\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            }
        }
    ]
}